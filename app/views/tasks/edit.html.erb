<h1>Edit task</h1>

<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :details %>
  <%= f.text_field :details %>

  <div class="checkbox">
      <label>
        <%= f.check_box :completed %> Completed
      </label>
    </div>

  <%= f.submit %>
<% end %>

<%= link_to "Back", tasks_path %>
